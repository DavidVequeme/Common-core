{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug get_next_line",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/get_next_line.out",  // Adjust to your output file name
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",  // Path to gdb, change it if necessary
            "preLaunchTask": "build get_next_line",  // This will run the build task before debugging
            "miDebuggerArgs": "",
            "logging": {
                "moduleLoad": false,
                "programOutput": true,
                "engineLogging": false
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
